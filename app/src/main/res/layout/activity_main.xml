<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <soup.neumorphism.NeumorphTextView


        style="@style/Widget.Neumorph.TextView"
        android:id="@+id/tv_result"
        app:neumorph_lightSource="rightBottom"
        android:textColor="@color/pink_neon"
        android:textSize="@dimen/_28sdp"
        android:textAlignment="center"
        app:neumorph_shadowElevation="@dimen/_1ssp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <soup.neumorphism.NeumorphButton
        android:id="@+id/btn_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="59dp"
        style="@style/Widget.Neumorph.Button"
        android:background="@color/background"
        android:text="@string/btn_clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_eight_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_nine"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_seven"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_five" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_seven_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_four" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_nine_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_eight"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_six" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_four_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_seven"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_onee" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_six_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_nine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_five"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_threee" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_five_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_eight"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_four"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_twoo" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_onee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_one_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_four"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_twoo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_threee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_three_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_six"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_twoo"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />

    <soup.neumorphism.NeumorphButton

        android:id="@+id/btn_add_twoo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_two_value"
        style="@style/Widget.Neumorph.Button"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_five"
        app:layout_constraintEnd_toStartOf="@+id/btn_add_threee"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_add_onee"
        app:layout_constraintTop_toBottomOf="@+id/tv_result" />


</androidx.constraintlayout.widget.ConstraintLayout>